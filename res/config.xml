<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.radiok.kuom"
        versionCode="38" 
        version   = "3.0.38">

<preference name="phonegap-version" value="cli-5.2.0" />
    <name>Radio K - KUOM</name>/Users/admin/android/radiok/helloworld/index.html
    <description>Radio K, the award-winning radio station of the University of Minnesota.</description>
<gap:platform name="android" />
<gap:platform name="ios" />
<gap:config-file platform="android" parent="/manifest/application">
    <activity android:launchMode="singleInstance" />
</gap:config-file>


<!--
<gap:plugin name="com.silverorange.now-playing" version="1.0.0" />
<gap:plugin name="com.rd11.remote-controls" version="1.0.0" />-->

<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
<gap:plugin name="org.apache.cordova.media" />
<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
<gap:plugin name="org.apache.cordova.network-information" />
<gap:plugin name="nl.kingsquare.background-audio" version="1.0.0" />
<gap:plugin name="org.apache.cordova.inappbrowser" />
<preference name="fullscreen" value="true" />
<preference name="orientation" value="portrait" />

<preference name="StatusBarOverlaysWebView" value="true" />
<gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
</gap:config-file>
<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
</gap:config-file>

<preference name="permissions" value="none"/>
<access origin="*" />

<gap:splash src="res/splash.png" />

<icon src="res/ldpi.png" platform="android" qualifier="ldpi" />
<icon src="res/mdpi.png" platform="android" qualifier="mdpi" />
